---
import { getCollection } from "astro:content";
import Header from "@components/HeaderRTL.astro";
import Footer from "@components/Footer.astro";
import Layout from "@layouts/Layout.astro";
import Main from "@layouts/MainRTL.astro";
import Tag from "@components/TagRTL.astro";
import getUniqueTags from "@utils/getUniqueTags";
import { SITE } from "@config";

const posts = await getCollection("ar");

let tags = getUniqueTags(posts);
---

<Layout title={`التصنيفات | ${SITE.title}`}>
  <Header activeNav="tags" />
  <Main pageTitle="التصنيفات" pageDesc="">
    <ul>
      {tags.map(({ tag }) => <Tag {tag} size="lg" />)}
    </ul>
  </Main>
  <Footer />
</Layout>
